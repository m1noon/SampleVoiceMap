<resources>
    <!-- アクションバーのスタイル -->
    <style name="CustomActionBarStyle"
        parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="android:icon">@drawable/actionbar_ic_ameba</item>
        <item name="android:background">@color/bg_actionbar</item>
        <item name="android:titleTextStyle">@style/CustomActionBarTitle</item>
    </style>

    <!-- アクションバー.タイトル文字 -->
    <style name="CustomActionBarTitle"
        parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/symbol_text_white</item>
        <item name="android:textSize">@dimen/textsize_18sp</item>
        <item name="android:baselineAlignBottom">true</item>
    </style>


</resources>